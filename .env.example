# Project Thalassa Environment Configuration

# Application Settings
APP_NAME="Project Thalassa"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT="development"

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (if needed in future)
# DATABASE_URL="sqlite:///./thalassa.db"

# File Storage Paths (relative to application root)
UPLOAD_DIR="uploads"
RESULTS_DIR="results"
MAX_FILE_SIZE_MB=100

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/thalassa.log"

# CORS Configuration (configure for production)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080"

# Risk Assessment Thresholds
CRITICAL_RISK_THRESHOLD=0.8
HIGH_RISK_THRESHOLD=0.6
MEDIUM_RISK_THRESHOLD=0.4

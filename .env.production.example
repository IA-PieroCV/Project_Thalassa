# Project Thalassa Production Environment Configuration
# IMPORTANT: Copy this file to .env.production and update ALL values before deployment

# Application Settings
APP_NAME="Project Thalassa"
APP_VERSION="1.0.0"
DEBUG=false  # MUST be false in production
ENVIRONMENT="production"

# Server Configuration
HOST=0.0.0.0
PORT=8000
# For production, consider using a reverse proxy (nginx, caddy) on port 443

# Security - CRITICAL: Generate new tokens for each deployment!
# Generate secure tokens using:
# python3 -c "import secrets; print('SECRET_KEY:', secrets.token_urlsafe(64))"
# python3 -c "import secrets; print('BEARER_TOKEN:', secrets.token_hex(64))"
SECRET_KEY="MUST-CHANGE-THIS-GENERATE-NEW-64-CHAR-SECRET-KEY"
ACCESS_TOKEN_EXPIRE_MINUTES=30
BEARER_TOKEN="MUST-CHANGE-THIS-GENERATE-NEW-128-CHAR-BEARER-TOKEN"

# Database (if needed in future)
# For production, use PostgreSQL or similar:
# DATABASE_URL="postgresql://user:password@localhost/thalassa_prod"

# File Storage Paths (absolute paths recommended for production)
UPLOAD_DIR="/var/thalassa/uploads"
RESULTS_DIR="/var/thalassa/results"
MAX_FILE_SIZE_MB=100

# Logging (production should use centralized logging)
LOG_LEVEL="WARNING"  # Use WARNING or ERROR in production
LOG_FILE="/var/log/thalassa/thalassa.log"

# CORS Configuration (restrict to specific origins in production)
# Replace with your actual frontend domain(s)
ALLOWED_ORIGINS="https://your-frontend-domain.com,https://partner-portal.com"

# Risk Assessment Thresholds
CRITICAL_RISK_THRESHOLD=0.8
HIGH_RISK_THRESHOLD=0.6
MEDIUM_RISK_THRESHOLD=0.4

# Additional Production Settings
# SSL/TLS Configuration (if handling directly, otherwise use reverse proxy)
# SSL_CERT_FILE="/path/to/cert.pem"
# SSL_KEY_FILE="/path/to/key.pem"

# Rate Limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_PER_MINUTE=60

# Monitoring and Alerting
# SENTRY_DSN="your-sentry-dsn-here"
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30
